# Frontend Environment Configuration
# CRM Frontend Environment Variables

# Application Configuration
VITE_APP_NAME=CRM Frontend
VITE_APP_VERSION=0.1.0
VITE_ENVIRONMENT=development

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=10000

# Socket.IO Configuration
VITE_SOCKET_URL=http://localhost:3001
VITE_SOCKET_NAMESPACE=/

# Authentication
VITE_JWT_SECRET=your-jwt-secret-key-here
VITE_TOKEN_EXPIRY=24h

# WhatsApp/Evolution API Configuration
VITE_WHATSAPP_API_URL=http://localhost:8080
VITE_EVOLUTION_API_VERSION=v2

# Database (if needed for frontend queries)
VITE_DATABASE_URL=postgresql://user:password@localhost:5432/crm_db

# Redis (for caching and real-time features)
VITE_REDIS_URL=redis://localhost:6379

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf,.doc,.docx,.csv,.xlsx

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_BULK_OPERATIONS=true
VITE_ENABLE_ADVANCED_SEARCH=true

# Logging
VITE_LOG_LEVEL=info
VITE_ENABLE_DEBUG_MODE=true

# External Services
VITE_EMAIL_SERVICE_URL=
VITE_SMS_SERVICE_URL=
VITE_TELEGRAM_BOT_TOKEN=

# Development Tools
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_HOT_RELOAD=true

# Build Configuration
VITE_BUILD_ANALYZE=false
VITE_MINIFY_JS=true
VITE_MINIFY_CSS=true

# Theme and UI
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_PRIMARY_COLOR=#0ea5e9
VITE_SECONDARY_COLOR=#64748b

# Contact Management
VITE_MAX_CONTACTS_PER_PAGE=50
VITE_ENABLE_CONTACT_IMPORT=true
VITE_ENABLE_CONTACT_EXPORT=true

# Campaign Configuration
VITE_MAX_CAMPAIGN_RECIPIENTS=1000
VITE_CAMPAIGN_BATCH_SIZE=100
VITE_ENABLE_CAMPAIGN_SCHEDULING=true

# Analytics and Tracking
VITE_ENABLE_USER_TRACKING=false
VITE_ANALYTICS_PROVIDER=
VITE_GOOGLE_ANALYTICS_ID=

# Security
VITE_ENABLE_CORS=true
VITE_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
VITE_ENABLE_HTTPS_REDIRECT=false