# Database Configuration
DATABASE_URL="postgresql://bagus:yangbagus@localhost:5432/crm_db?schema=public"

# Redis Configuration  
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="30m"

# Master Key for Encryption (required for Evolution API key encryption)
MASTER_KEY="your-32-byte-master-key-for-encryption-use-hex-or-utf8"

# Server Configuration
PORT=3001
HOST="localhost"

# Evolution API Configuration (Global default - can be overridden per user)
EVOLUTION_API_BASE_URL="http://localhost:8080"
EVOLUTION_API_KEY="your-evolution-api-key"

# Worker Configuration
WORKER_CONCURRENCY="5"
WORKER_MAX_RETRIES="3"
WORKER_MAX_CONCURRENT_JOBS_PER_TENANT="5"
WORKER_MIN_DELAY_BETWEEN_JOBS="5000"

# Application Configuration
NODE_ENV="development"
API_PREFIX="/api/v1"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="1 minute"

# CORS Configuration
CORS_ORIGIN="http://localhost:5173"

# Socket.IO Configuration
SOCKET_IO_CORS_ORIGIN="http://localhost:5173"

# WhatsApp Configuration
WHATSAPP_DEFAULT_DELAY="5000"
WHATSAPP_MAX_RETRIES="3"
WHATSAPP_RETRY_DELAY="30000"

# Security
BCRYPT_ROUNDS="12"
SESSION_SECRET="your-session-secret-change-this"

# Logging
LOG_LEVEL="info"